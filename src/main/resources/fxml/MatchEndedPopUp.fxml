<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="400.0" minWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chess.gui.controller.MatchEndedController">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" minHeight="70.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="topText" alignment="BOTTOM_CENTER" minHeight="60.0" minWidth="250.0" text="top text" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="34.0" />
                     </font></Label>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" minHeight="40.0" VBox.vgrow="SOMETIMES">
               <children>
                  <Label fx:id="bottomText" alignment="TOP_CENTER" minHeight="30.0" minWidth="250.0" text="bottom text" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font></Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" minHeight="60.0" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="50.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <VBox alignment="CENTER" minHeight="60.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="rematchButton" minHeight="54.0" minWidth="230.0" mnemonicParsing="false" onAction="#rematchClicked" text="Rematch" VBox.vgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" minHeight="60.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="mainMenuButton" minHeight="54.0" minWidth="230.0" mnemonicParsing="false" onAction="#mainMenuClicked" text="Main Menu" VBox.vgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" minHeight="60.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="quitGameButton" minHeight="54.0" minWidth="230.0" mnemonicParsing="false" onAction="#quitGameClicked" text="Quit Game" VBox.vgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
